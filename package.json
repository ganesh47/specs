{
  "name": "specs-monorepo",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "packages/specs-cli",
    "packages/specs-coverage-action"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces || true",
    "test": "npm run test --workspaces || true",
    "setup-hooks": "git config core.hooksPath .githooks",
    "example:conform": "cd examples/sample-app && npx specs scan",
    "spec-kit:check": "node scripts/check-spec-kit.js"
  },
  "license": "MIT"
}
